{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    ".hypothesis": true,
    ".mypy_cache": true,
    ".pytest_cache": true,
    ".venv/": true,
    ".coverage": true,
    "*__pycache__": true,
    "*.egg-info": true,
    "cov.xml": true,
    // "poetry.lock": true,
    // "setup.cfg": true,
    // ".pre-commit-config.yaml": true,
    ".gitlab-ci.yml": true,
    ".gitpod.Dockerfile": true,
    ".gitpod.yml": true,
    // ".gitignore": true,
    // ".dockerignore": true,
  },
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.mypyEnabled": true,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true
}
