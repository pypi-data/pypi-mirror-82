<InputPage>:
    name: 'input'
    id: input_widget

    # Background
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex("#99D19C")
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # Title Bar
        Label:
            text: 'Manual Input'
            color: utils.get_color_from_hex("#000501")
            size_hint_y: .1
            font_size: 30
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex("#73AB84")
                Rectangle:
                    size: self.size
                    pos: self.pos

        # Content
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .8
            Label
            # Input
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Produce Type:'
                    color: utils.get_color_from_hex("#000501")
                    size_hint_x: .4
                # Input Box
                TextInput:
                    id: produce_input
                    multiline: False
                    hint_text: 'i.e. Apple'
                    input_type: 'text'
                    size_hint_x: .4
                    cursor_color: utils.get_color_from_hex("#73AB84")
                    text_color: utils.get_color_from_hex("#73AB84")
                Label:
                    size_hint_x: .2
            Label

        # Button Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .15

            # Cancel Button
            BoxLayout:
                orientation: 'vertical'
                # Background
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#73AB84')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ImageButton:
                    source: 'resources/cancel_icon.png'
                    size_hint_y: .7
                    on_release: app.root.current = 'pantry'
                Label:
                    text: 'Cancel'
                    color: utils.get_color_from_hex("#000000")
                    size_hint_y: .3
                    font_size: 14

            #  Submit Button
            BoxLayout:
                orientation: 'vertical'
                # Background
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#73AB84')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ImageButton:
                    source: 'resources/submit_icon.png'
                    size_hint_y: .7
                    on_release:
                        app.root.current = 'pantry'
                        root.text_entered()

                Label:
                    text: 'Submit'
                    color: utils.get_color_from_hex("#000000")
                    size_hint_y: .3
                    font_size: 14