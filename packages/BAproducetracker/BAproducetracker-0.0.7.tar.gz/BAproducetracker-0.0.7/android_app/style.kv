#kivy 1.11.1
#:import utils kivy.utils
#:import Transition kivy.uix.screenmanager
#:import ButtonBehavior kivy.uix.behaviors
#:include widgets.kv


Manager:
    transition: Transition.NoTransition()
    LandingPage:
    PantryPage:
        id: pantry_page
    IdeasPage:
    SettingsPage:
    AboutPage:
    InputPage:
        id: input_page



<LandingPage>:
    name: 'landing'

    Camera:
        id: camera
        resolution: (self.size[0],self.size[1])
        play: True

    BoxLayout:
        orientation: 'vertical'

        Label:
            size_hint_y: 1

        # Capture Button
        ImageButton:
            source: 'resources/capture_icon.png'
            size_hint_y: .2
            on_release:
                root.capture()
                app.root.current = 'pantry'
                app.root.ids.pantry_page.read_image()


        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .2

            # Pantry Button
            BoxLayout:
                orientation: 'vertical'
                ImageButton:
                    source: 'resources/apple_icon_colored.png'
                    on_release: app.root.current = 'pantry'
                Label:
                    text: 'Pantry'
                    color: utils.get_color_from_hex("#FFFFFF")
                    font_size: 22

            # Ideas Button
            BoxLayout:
                orientation: 'vertical'
                ImageButton:
                    source: 'resources/light_icon_colored.png'
                    on_release: app.root.current = 'ideas'
                Label:
                    text: 'Ideas'
                    color: utils.get_color_from_hex("#FFFFFF")
                    font_size: 22


<PantryPage>:
    name: 'pantry'

    # Background
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex("#99D19C")
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # Title Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex("#73AB84")
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                size_hint_x: .2
            Label:
                id: title_text
                text: 'Pantry'
                color: utils.get_color_from_hex("#000501")
                font_size: 30
                size_hint_x: .6

            ImageButton:
                on_release: app.root.current = 'input'
                source: 'resources/plus_icon.png'
                size_hint_x: .2

        #Subtitle Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .05
            Label:
                size_hint_x: .1
            Label:
                text: 'Used/Expired'
                color: utils.get_color_from_hex("#000000")
                bold: True
                size_hint_x: .15
            Label:
                size_hint_x: .05
            Label:
                text: 'Item'
                color: utils.get_color_from_hex("#000000")
                bold: True
                size_hint_x: .7
            Label:
                text: 'Time Remaining'
                color: utils.get_color_from_hex("#000000")
                bold: True
                size_hint_x: .2
            Label:
                size_hint_x: .1

        # Produce Menu
        ScrollMenu
            id: scroll_menu
            size_hint_y: .75

        # Navigation Bar
        ButtonBar:
            id: nav_bar
            size_hint_y: .15


<IdeasPage>:
    name: 'ideas'

    # Background
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex("#99D19C")
        Rectangle:
            pos: self.pos
