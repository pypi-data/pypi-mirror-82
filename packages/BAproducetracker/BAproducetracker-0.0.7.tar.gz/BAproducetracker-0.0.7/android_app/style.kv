        # Title Bar
        Label:
            text: 'Ideas'
            color: utils.get_color_from_hex("#000501")
            size_hint_y: .1
            font_size: 30
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex("#73AB84")
                Rectangle:
                    size: self.size
                    pos: self.pos

        # Content
        Label:
            color: utils.get_color_from_hex("#000501")
            size_hint_y: .8

        # Navigation Bar
        ButtonBar:
            id: nav_bar
            size_hint_y: .15


