{
  "id": "http://schema.owbd.uk/configutil/master_config_schema.json",
  "$schema": "http://json-schema.org/schema#",
  "description": "Schema for the configutil master_config file.",

  "definitions": {
    "registered_configurations": {
      "additionalProperties": {
        "type": "object",
        "properties": {
          "filename": {"type": "string"},
          "type": {"type": "string"},
          "template": {"type": "string"},
          "schema": {"type": "string"}
        },
        "required": ["filename", "type"],
        "additionalProperties": false
      }
    }
  },

  "type": "object",
  "properties": {
    "registered_cfg": { "$ref": "#/definitions/registered_configurations" }
  },
  "required": ["registered_cfg"],
  "additionalProperties": false
}