<tryton>
    <data>

        <!-- cron-job: update rates -->
        <record model="ir.cron" id="cron_update_rates">
            <field name="name">Currency: Update Exchange Rates</field>
            <field name="request_user" ref="res.user_admin"/>
            <field name="user" ref="res.user_trigger"/>
            <field name="active" eval="True"/>
            <field name="interval_number" eval="1"/>
            <field name="interval_type">hours</field>
            <field name="number_calls" eval="-1"/>
            <field name="repeat_missed" eval="False"/>
            <field name="model">currency.currency</field>
            <field name="function">cron_update_rate_online</field>
        </record>

    </data>
</tryton>
