<tryton>
    <data>

        <!-- wizard: run rates update -->
        <record model="ir.action.wizard" id="wizard_update">
            <field name="name">Update exchange rates</field>
            <field name="wiz_name">currency_rate_import_ecb.updatewiz</field>
            <field name="model">currency.currency</field>
        </record>
        <record model="ir.action.keyword" id="wizard_update_keyword1">
            <field name="keyword">form_action</field>
            <field name="model">currency.currency,-1</field>
            <field name="action" ref="wizard_update"/>
        </record>
        <!-- permissions for wizard -->
        <record model="ir.action-res.group" id="wizard_update-group_admin">
            <field name="action" ref="wizard_update"/>
            <field name="group" ref="res.group_admin"/>
        </record>

    </data>
</tryton>
