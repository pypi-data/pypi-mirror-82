//  / ____|                         | | |  __ \     | |
// | |  __  ___ _ __   ___ _ __ __ _| | | |__) |   _| | ___  ___
// | | |_ |/ _ \ '_ \ / _ \ '__/ _` | | |  _  / | | | |/ _ \/ __|
// | |__| |  __/ | | |  __/ | | (_| | | | | \ \ |_| | |  __/\__ \
//  \_____|\___|_| |_|\___|_|  \__,_|_| |_|  \_\__,_|_|\___||___/

    // KEY: VALUE PAIRS
KeyValue:
    key=TrueID ':' value=StringOrLine ;

    // AN ID THAT IS NOT A KEYWORD
TrueID:
    (!Reserved ID) ;

    // LIST OF KEYWORDS FOR EMULSION DSL
Reserved:
    SectionName | ConstantKeyword | MajorKeyword | MinorKeyword ;

SectionName:
    'model_name:' | 'levels:' | 'model_info:' | 'modules:' | 'outputs:' | 'grouping:' |
    'parameters:' | 'processes:' | 'prototypes:' | 'state_machines:' |
    'states:' | 'transitions:' | 'actions:' | 'statevars:' | 'time_info:' |
    'calendars:' | 'events:' | 'initial_conditions:' | 'productions:'
;

ConstantKeyword:
    'IBM' | 'hybrid' | 'compartment' | 'metapopulation' ;


MajorKeyword:
    'desc:' | 'key_variables:' | 'value:' | 'machine_name:' |
    'duration:' | 'fillcolor:' | 'name:' | 'on_enter:' | 'on_stay:' |
    'on_exit:' | 'on_cross:' | 'from:' | 'to:' | 'rate:' | 'action:' |
    'proba:' | 'amount:' | 'amount-all-but:' | 'when:' | 'cond:' | 'escape:' |
    'date:' | 'begin:' | 'end:' | 'period:' | 'delta_t:' | 'origin:' |
    'time_unit:' | 'total_duration:' | 'contains:' | 'aggregation_type:' |
    'message:' | 'become:' | 'population:' | 'prototype:' | 'total:' |
    'produce_offspring:' | 'set_var:' | 'log_vars:' | 'aggregate_vars:' |
    'collect:' | 'operator:' | 'begin_with:' | 'end_with:'
;

MinorKeyword:
    'compart_class:' | 'compart_manager:' | 'class_name:' | 'module:' |
    'super:' | 'master:' | 'database_information:' | 'dialect:' |
    'driver:' | 'password:' | 'server_name:' | 'username:' | 'type:' |
    'init:' | 'options:' | 'distributions:' | 'extra_vars:' | 'autoremove:' | 'default:'|
    'file:' | 'filter:' | 'select:'
;
    // EITHER A DELIMITED STRING OR THE END OF THE CURRENT LINE
StringOrLine:
    STRING | /[\w\[{].*$/
;

    // PATTERNS FOR VALID HOST NAMES
ValidHostName:
    'localhost' |
    /^(([a-z]|[a-z][a-z0-9\-]*[a-z0-9])\.)*([a-z]|[a-z][a-z0-9\-]*[a-z0-9])$/
;

    // PATTERN FOR VALID IP ADDRESS
ValidIP:
    /^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$/
;

    // SPECIFICATIONS OF A CLASS
ClassSpec:
    (('module:' module=ModuleName)
     ('class_name:' class=ClassName))#
;

ModuleName:
    /[a-zA-Z0-9_\.]+/ ;

FileName:
    /[a-zA-Z0-9_\.\/]+.py/ ;

ClassName:
    /\b[A-Z][a-zA-Z0-9_]+/ ;

Comment:
    /\#.*$/ ;
